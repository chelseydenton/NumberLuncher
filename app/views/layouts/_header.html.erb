<link href='http://fonts.googleapis.com/css?family=Asap' rel='stylesheet' type='text/css'>
<header class="navbar navbar-fixed-top navbar-default">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "NumberLuncher", root_path, id: "logo" %>
      <nav>
        <ul class="nav pull-right">
          <% if signed_in? %>
            <li>
              <%= link_to "Sign out", signout_path, {:method => 'delete', :id => 'right_link'} %>
            </li>
          <% else %>
            <li>
              <%= link_to "Sign in", signin_path, {:id => 'right_link'} %>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </div>
</header>
