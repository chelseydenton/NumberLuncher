<% provide(:title, @user.email) %>
<div class="row">
  <aside class="span4">
    <section>
      <%= render 'shared/user_info', current_user: @user  %>
    </section>
  </aside>

  <div class="span8">
  	<h3>Make Observation</h3>
  	<div class="row our_row">
	  <%= render 'observations/form' %>
	</div>
    <% if @user.observations.any? %>
      <h3>Observations (<%= @user.observations.count %>)</h3>
      <ol class="observations">
        <%= render @observations %>
      </ol>
      <%= will_paginate @observations %>
    <% end %>
  </div>
</div>